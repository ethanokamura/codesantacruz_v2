---
import Layout from "./Layout.astro";
import Window from "../components/Window.astro";
import * as config from '../utils/config';
---

<Layout>
  <main class="grid justify-center pb-20 pt-10">
    <header class="grid max-w-2xl w-full text-center items-start mx-auto gap-4 p-6 mb-10 ">
      <h1 class="animate-title text-text drop-shadow-none md:text-6xl text-4xl mb-6 transition-all ease-linear duration-300">{config.title}</h1>
      <Window width="w-fit">
        <h4 class="text-text">Premium, Interactive, <b>Project-Based</b> Courses.</h4>
        <div class="flex">
          <span class="text-text2 max-w-fit inline-block animate-typing overflow-hidden whitespace-nowrap w-fit">&gt; Created By Ethan Okamura</span>
          <div class="animate-blink">_</div>
        </div>
        <br/>
        <p class="text-text">Sign up today via <a href="https://discord.gg/Q2yHGnqSCv" target="_blank">Discord</a>, <a href="mailto:ethanokamura3@gmail.com">email</a>, or by completing this <a href="https://docs.google.com/forms/d/e/1FAIpQLSeByudOhcbytFHKEb-ezouKcEB2lQiHEQ_rMN2qtKZmUW9FSA/viewform?usp=sf_link" target="_blank">Google Form</a></p>
      </Window>
    </header>
    <article>
      <div class="prose text-xl">
        <slot />
      </div>
    </article>
  </main>
</Layout>

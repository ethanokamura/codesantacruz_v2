---
// components
import Layout from './Layout.astro';
import Navbar from '../components/Navbar.astro';

// utils
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article >
    <Navbar course={frontmatter.course} />
    <hgroup>
      <h1 class="capitalize font-rubik font-[800]">{frontmatter.title}</h1>
      <h3 class="text-text">{frontmatter.description}</h3>
    </hgroup>
    <div class="prose">
      <slot/>
    </div>
  </article>
</Layout>

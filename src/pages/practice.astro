---
import Layout from '../layouts/Layout.astro';
import { array } from '../utils/data.json';
import Problem from '../components/Problem.astro';
import Title from "../components/Title.astro";
// components
---
<Layout>
  <div class="grid items-center h-full pb-16 px-6">
    <Title description="Practice Problems" subdescription="Put Your Knowledge To The Test"/>

    <!-- <header class="mx-12">
      <h1 class="capitalize text-primary">{entry.data.title}</h1>
      <h2 class="font-[300] text-xl md:text-2xl">{entry.data.description}</h2>
      <div class="border-b-2 border-secondary my-4 border-dashed"></div>
    </header>
    <article class="prose mb-6">
      <Content />
    </article> -->
    <div class="grid gap-3 mb-10 justify-center text-center">
      <h1 class="text-primary text-2xl md:text-3xl">Filters:</h1>
      <div class="flex flex-wrap gap-4 items-center font-[800] text-base md:text-2xl">
        <button class="text-green-400">Easy</button>
        <button class="text-yellow-300">Medium</button>
        <button class="text-red-400">Hard</button>
        <button>Misc</button>
        <button>Arrays</button>
        <button>Linked Lists</button>
        <button>DSA</button>
      </div>
    </div>
    <h1 class="text-center text-4xl text-primary">Problems:</h1>
    <div class="flex flex-wrap items-start justify-around gap-6 p-5">
      { array.map((problem:any, index: number) =>
        <Problem index={index + 1} data={problem}/>
      )}
    </div>
  </div>
</Layout>
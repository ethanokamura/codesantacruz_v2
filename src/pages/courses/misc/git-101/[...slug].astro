---
import { getCollection } from 'astro:content';
import type { ContentEntry } from 'astro:content';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const cppCourses = await getCollection('git-101');
  // const entry = await getEntry(cppCourses, 'array');
  // console.log(entry)
  return cppCourses.map((entry) => ({
    params: { course: entry.data.course, slug: entry.slug }, props: { entry },
  }));
}

type Props = {
  entry: ContentEntry<'git-101'>
}

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Content />
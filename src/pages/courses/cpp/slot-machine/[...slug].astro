---
import { getCollection } from 'astro:content';
import type { CollectionEntry, CollectionKey } from 'astro:content';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const courses = await getCollection('slot-machine');
  // const entry = await getEntry(cppCourses, 'array');
  // console.log(entry)
  return courses.map((entry) => ({
    params: { course: entry.data.course, slug: entry.slug }, props: { entry },
  }));
}

type Props = {
  entry: CollectionEntry<'slot-machine'>
}

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---
<Content />
---
interface Props {
	title: string;
  path: string;
}
import { Icon } from 'astro-icon/components'

const { title, path } = Astro.props;
---

<nav class={`headnav ${path === "/" ? "justify-end" : "justify-between"} text-lg md:text-2xl`}>
  { path === "/" ? <></> : <a href="/"><Icon name="ic:round-home" /></a> }

  { path.includes("/courses") ?
    <a class="font-rubik font-[800]" href="/courses">Courses</a>
  :
    <div class="flex gap-4 md:gap-10">
      <a class="font-rubik font-[800]" href="/about">About</a>
      <a class="font-rubik font-[800]" href="/tutoring">Tutoring</a>
      <a class="font-rubik font-[800]" href="/courses">Courses</a>
    </div>
  }
  <!-- <a class="font-rubik font-[800]" href="/roadmap">Roadmap</a> -->
</nav>

---
interface Props {
	description: string;
	subdescription: string;
}
const { description, subdescription } = Astro.props;
---
<header class="my-10 w-full text-center mx-auto">
  <h1 class="md:text-6xl text-3xl">&lt;PerfectLine/&gt; </h1>
  <h2 class="text-primary uppercase">{description}</h2>
  { subdescription == "" ? <></> : <h3 class="text-text2">{subdescription}</h3> }
</header>
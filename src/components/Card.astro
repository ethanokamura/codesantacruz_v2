---
import Tag from './Tag.astro'
const { data, url } = Astro.props;
---

<a href={`${url}`} class='bg-secondary rounded-lg w-full items-start flex drop-shadow-none hover:scale-110 ease-linear duration-100'>
<img class="rounded-l-lg w-[312px] h-[175.5px]" src={data.img} alt={data.alt}/>
  <div class="text-start p-6 h-full flex flex-col justify-between">
    <div>
      <h1 class="capitalize text-xl">{data.title}</h1>
      <p class="text-sm capitalize text-text2">{data.description}</p>
    </div>
    <div class="tags overflow-x-scroll">
      {data.tags.map((tag: string) =>
        <Tag name={tag}/>
      )}
    </div>
  </div>
</a>

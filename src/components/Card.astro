---
import Tag from './Tag.astro'
const { data, url } = Astro.props;
---

<a href={`${url}`} class='bg-secondary rounded-lg w-full items-start flex drop-shadow-none hover:scale-110 ease-linear duration-100'>
<img class="rounded-l-lg w-[256px] h-auto" src={data.img} alt={data.alt}/>
  <div class="text-start p-6 h-full">
    <h1 class="capitalize text-2xl">{data.title}</h1>
    <p class="capitalize text-xl text-text2">{data.description}</p>
  </div>
</a>
